{
  "name": "hado-ui",
  "version": "0.0.2",
  "description": "A collection of UI web components",
  "main": "dist/hado-ui.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "keywords": [
    "Web Component",
    "UI",
    "Stencil",
    "Agnostic",
    "Angular",
    "Vue",
    "React",
    "Javascript"
  ],
  "files": [
    "dist/"
  ],
  "browser": "dist/hado-ui.js",
  "scripts": {
    "build": "stencil build",
    "dev": "sd concurrent \"stencil build --dev --watch\" \"stencil-dev-server\" ",
    "serve": "stencil-dev-server",
    "start": "rimraf ./www/build && npm run dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache"
  },
  "dependencies": {
    "@stencil/core": "^0.6.18",
    "hammerjs": "^2.0.8",
    "moment": "^2.21.0"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/sass": "^0.0.3",
    "@stencil/utils": "latest",
    "@types/hammerjs": "^2.0.35",
    "@types/jest": "^21.1.1",
    "jest": "^21.2.1",
    "rimraf": "^2.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fausfore/st-datepicker.git"
  },
  "author": "Ionic Team",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
